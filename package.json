{
  "private": true,
  "scripts": {
    "build": "wsrun --exclude-missing --serial -c prepublishOnly"
  },
  "workspaces": [
    "pkgs/*"
  ],
  "devDependencies": {
    "@types/jest": "26.0.20",
    "bili": "5.0.5",
    "cross-env": "7.0.3",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "2.2.1",
    "ts-jest": "26.4.4",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.1.3",
    "wsrun": "5.2.4"
  },
  "resolutions": {
    "@types/react": "^16.9.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    "Chrome >= 71",
    "ios_saf >= 13",
    "safari >= 13"
  ]
}
